[agent]
  interval = "10s"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  precision = ""
  hostname = ""
  omit_hostname = false

  [[outputs.influxdb_v2]]
    urls = ["https://database:8086"]
    token = "$$INFLUX_TOKEN$$"
    insecure_skip_verify = true
    organization = "iot"
    bucket = "data"

  [[inputs.mqtt_consumer]]
    servers = ["ws://mqtt_server:9001"]
    topics = ["sensors/#"]
    data_type = "float"
    data_format = "value"
    tls_ca = "/run/secrets/mosquitto_crt"
    tls_cert = "/run/secrets/mosquitto_crt"
    tls_key = "/run/secrets/mosquitto_key"
    insecure_skip_verify = true